@using OnionApp.Models
@model TransactionResultView

<div class="container">
    <div class="alert alert-danger alert-dismissable">
        @Html.ValidationSummary()
        @Html.ValidationMessageFor(m => m.FullName)
    </div>
    <h2>Thank you for your order, our manager will contact you</h2>
    <p><strong>Customer: </strong>@Model.FullName</p>
    <p><strong>Phone number: </strong>@Model.Phone</p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>No.</th>
                <th>Model Name</th>
                <th>Photo</th>
                <th>Price</th>
                <th>Count</th>
                <th>Total Position</th>
            </tr>
        </thead>
        <tbody>
            @{
                int no = 1;
                foreach (var item in Model.OrderedCars)
                {
                    decimal total = item.Car.Price * item.Count;
                    <tr>
                        <td>@(no++)</td>
                        <td>@item.Car.Name</td>
                        <td>
                            <img src="~/Content/Images/Ferrari/@item.Car.UrlImage" />
                        </td>
                        <td>@item.Car.Price</td>
                        <td>@item.Count</td>
                        <td>@total</td>
                    </tr>
                }
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><strong>Total price:</strong></td>
                <td>
                    <strong>
                        @Model.OrderedCars.Sum(x => x.Car.Price)
                    </strong>
                </td>
            </tr>
        </tbody>
    </table>
</div>




